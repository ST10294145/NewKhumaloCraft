<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewKhumaloCraft</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewKhumaloCraft.styles.css" asp-append-version="true" />
    <style>
        /* General styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f8ff;
            color: #000 !important; /* Change text color to black */
        }

        /* Navbar styling */
        .navbar {
            background: linear-gradient(to right, #ff7e5f, #feb47b);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }

            .nav-link:hover {
                color: #ffefba !important;
                text-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
            }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        /* Footer styling */
        footer {
            background-color: #ff7e5f;
            color: #fff;
            padding: 1em 0;
        }

            footer a {
                color: #ffefba;
            }

                footer a:hover {
                    color: #fff;
                    text-decoration: underline;
                }

        /* Main content styling */
        .container {
            margin-top: 20px;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #333;
        }

        a {
            color: #ff7e5f;
        }

            a:hover {
                color: #feb47b;
            }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(to right, #ff7e5f, #feb47b);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #feb47b, #ff7e5f);
            }

        /* Adding some custom styling for form elements */
        input[type="text"], input[type="email"], input[type="password"], textarea {
            border: 2px solid #ff7e5f;
            padding: 10px;
            border-radius: 5px;
        }

            input[type="text"]:focus, input[type="email"]:focus, input[type="password"]:focus, textarea:focus {
                border-color: #feb47b;
                box-shadow: 0 0 5px rgba(255, 126, 95, 0.5);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NewKhumaloCraft</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Submissions" asp-action="Create">Contact Us!</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MyWorkPage">My Work Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseDetails" asp-action="Create">Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PurchaseDetails" asp-action="Index">Order History</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
